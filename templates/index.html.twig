    </section>
    {% if reviews|default %}
        <section id="testimonial" class="hide">
            <div class="feature-subheader text-center">
                Testimonial
            </div>
            <div class="feature-header text-center">
                {{ reviews|length }} Reviews
            </div>
            <div class="feature-content text-center">
                <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="index_review">
                                <div class="review_user">
                                    {{ reviews[0].user.username }}
                                </div>
                                <div class="review_text">
                                    "{{ reviews[0].comment }}"
                                </div>
                                <div class="review_date">
                                    {{ reviews[0].createdat|date("M d") }}
                                </div>
                            </div>
                        </div>
                        {% for review in reviews %}
                        <div class="carousel-item">
                            <div class="index_review">
                                <div class="review_user">
                                    {{ review.user.username }}
                                </div>
                                <div class="review_text">
                                    "{{ review.comment }}"
                                </div>
                                <div class="review_date">
                                    {{ review.createdat|date("M d") }}
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </section>
    {% endif %}
        <section id="faq" class="hide">
            <div id="parallax-faq">
                <div class="pt-4">
                    <div class="feature-subheader text-center">
                        Frequently asked questions
                    </div>
                    <div class="feature-header text-center">
                        Still dubious?
                    </div>
                    <div class="feature-content text-center">We will take our time to answer all your questions.
                    </div>
                    <a class="button button-violet btn--large mt-5" href="{{ path('faq') }}">SEE THE FAQ</a>
                </div>
            </div>
