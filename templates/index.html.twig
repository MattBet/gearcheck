{% extends 'base.html.twig' %}

{% block body %}


        <section id="hero">
            <div class="hero">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="hero-subheader">endless hours of farming?
                        </div>
                        <div class="hero-header">From now, get your favorite mounts, gear or achievements
                        </div>
                        <div class="hero-buttons">
                            {% if app.user %}
                                <a class="button button-violet" href="#topselling">OUR BEST SELLERS</a>
                            {% else %}
                                <a class="button button-violet" data-toggle="modal" data-target="#signupModal">CREATE AN ACCOUNT</a>
                            {% endif %}

                            <a href="#testimonial" class="button">REVIEWS</a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                    </div>
                </div>
            </div>
        </section>

        <section id="service">
                <div class="feature-subheader text-center">
                    categories
                </div>
                <div class="feature-header text-center">
                    Choose your way of getting ahead
                </div>
                <div class="feature-content text-center">Prepare yourself for BFA.
                </div>
            <div class="row mt-4">
                <div class="col-lg-6" id="little-square">
                    <div class="foo foo-featured flex-centered" style='background: linear-gradient(rgba(34, 37, 47, 0.2), rgba(34, 37, 47, 0.95)), url("../img/powerleveling.jpg") 75% 35%; background-size: cover;'>
                        <h3 class="">Powerleveling</h3>
                        <a class="button button-fancy" href="/category/5">SHOW MORE<span><img src="../img/next.png" class="ml-2" alt=""></span></a>
                    </div>
                </div>

                <div class="col-lg-6" id="little-square2">
                    <div class="foo foo-featured flex-centered" style='background: linear-gradient(rgba(34, 37, 47, 0.2), rgba(34, 37, 47, 0.95)), url("../img/wow-token.jpg") 50% 40%; background-size: cover;'>
                        <h3 class="">Gold</h3>
                        <a class="button button-fancy" href="/category/1">SHOW MORE<span><img src="../img/next.png" class="ml-2" alt=""></span></a>
                    </div>
                </div>
            </div>
            <div class="row mt-4 hide">
                <div class="col-lg-12" id="big-square" data-background="nightbornefemale.png">
                    <div class="foo foo-featured" style='background: linear-gradient(rgba(34, 37, 47, 0.2), rgba(34, 37, 47, 0.95)), url("../img/cos.jpg") 75% 35% ; background-size: cover;'>
                        <h3>Mythic+</h3>
                        <a class="button button-fancy button-violet" href="/category/4">SHOW MORE<span><img src="../img/next.png" class="ml-2" alt=""></span></a>
                    </div>
                </div>
            </div>
        </section>

        <section id="topselling" class="hide">
            <div class="feature-subheader text-center">
                Popular sellers
            </div>
            <div class="feature-header text-center hide">
                Top selling now
            </div>
            <div class="products">
                {% for product in products %}
                    <div class="product-card--index" style="background: linear-gradient(rgba(34, 37, 47, 0.2), rgba(34, 37, 47, 0.95)), url('../uploads/{{ product.image }}') no-repeat; background-size: cover;">
                        <div class="product-info">
                            <h5 class="product-name"><a href="/product/{{ product.id }}">{{ product.name }}</a></h5>
                            <form action='{{ path('add_to_cart', {'id': product.id }) }}' id="atc_{{ product.id }}">
                            <div><button type="submit" class="button"><span><img src="../img/shopping-cart.png" style="width: 24px; height: 24px;" class="mr-2" alt=""></span>ADD TO CART</button></div>
                            </form>
                                <div><a href="/product/{{ product.id }}" class="button button-red">BUY</a></div>
                        </div>
                    </div>
                {% else %}
                    <div>No products found</div>
                {% endfor %}
            </div>
        </section>

    <section id="howdoesitwork" class="text-center">
