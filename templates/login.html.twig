{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('home') }}" method="post" class="ajax_login">
    <input type="text" id="username" name="_username" placeholder="Username" value="{{ last_username }}" />

    <input type="password" id="password" name="_password" placeholder="Password" />

        <button class="mt-3 button btn--filled btn--large" type="submit">login</button>
</form>