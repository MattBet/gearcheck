{% extends 'base.html.twig' %}

{% block body %}
    <div class="register--wrapper">
        <div class="register_title feature-subheader">Create an account</div>
{{ form_start(formRegister, {'attr': {'class': 'ajax_signup'}}) }}
    {{ form_row(formRegister.username) }}
    {{ form_row(formRegister.email) }}
    {{ form_row(formRegister.plainPassword.first) }}
    {{ form_row(formRegister.plainPassword.second) }}

<button class="button btn--filled btn--large mt-3" type="submit">Register!</button>
{{ form_end(formRegister) }}

        <hr class="footer_hr">
        <div class="text-muted" style="float: left;">You already have an account? <a class="to_login" href="{{ path('login') }}">Login</a></div>
    </div>
{% endblock %}